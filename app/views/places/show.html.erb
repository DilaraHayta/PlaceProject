Display Place<br /><br />

<b>ID:  </b><%= @place.id %><br />
<b>Name:  </b><%= @place.name %><br />
<b>Address: </b><%= @place.adress %><br />
<b>Phone Number: </b><%= @place.phone_number %><br />
<b>Contact Mail: </b><%= @place.contact_mail %><br />
<b>Established At: </b><%= @place.established_at %><br />
<b>City: </b><%= @place.city %><br />
<b>Description: </b><%= @place.description %><br />
<b>Category: </b><%= @place.category.name %>


<br /><br /><br />

<div class="panel panel-default">
  <div class="panel-heading">
     Comments
   </div>
   <div class="panel-body">
  <% @place.comments.each do |comment| %>
         <small><%= comment.customer.email %> says:</small>
         <p><%= comment.body %></p>
        <% end %>

    </div>
  </div>

<% if current_customer.present? %>
      <div class="panel panel-primary">
      <div class="panel-heading">
        Send a new comment
     </div>
      <div class="panel-body">
       <%= form_for [@place, @place.comments.build] do |f| %>
              <%= f.text_area :body, rows: 5 %><br>
              <%= f.submit 'Send' %>
           <% end %>
      </div>
      </div>
<% end %>
<br/><br/>
<%= link_to "Back to idea list", places_path %>
<br/>
<% if current_customer.present? and current_customer.id == @place.customer_id %>
      <br/>
      <%= link_to "Edit idea", edit_place_path(@place) %>
     <br/>
      <%= link_to "Sil", place_path(@place), method: :delete %>
    <% end %>
